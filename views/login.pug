block navpanel
	// --------------- Navigation Bar  -------------- //
	include ./template/nav.pug
	
	
block content
	// --------------- Main Stuff  -------------- //
	#notificationWrap
	
	#contentPanel
		
		// --------------- Welcome Panel
		#welcomePanel
			h2(style="font-weight: 600;") WELCOME TO THE MARBLES DEMO APP

			#adminText
				span Hello again 
				span#loginCompany #{bag.customer_company} 
				span admin !

			p 
				span This application allows you to simulate a simple asset transaction over a Hyperledger Fabric blockchain.  
				span You can connect multiple peers to trade with a larger customer user base. 
				span In this application, you can: 
			
			#split1x3Wrap
				.split1x3
					.welcomeTitle
						span Trade
						//br
							span Assets
					br
					.blub1x3 Transfer assets (customers) across the customers user base
					img(src="/imgs/welcome_img1.png").welcomeImg
				.split1x3
					.welcomeTitle
						span Create
						//br
							span Customers
					br
					.blub1x3 Create new assets (customers)
					img(src="/imgs/welcome_img2.png").welcomeImg
				.split1x3
					.welcomeTitle
						span Verify
						//br
							span Ownership
					br
					.blub1x3 Verify customer transactions
					img(src="/imgs/welcome_img3.png").welcomeImg
			br
			br

			p 
				span For more information, please visit our 
				a(href="https://github.com/IBM-Blockchain/marbles/tree/v4.0") GitHub
				span.


		// --------------- Login Panel
		form#loginPanel(method="POST" action="#")
			p Enter
			hr
			input(type="text" placeholder="username" value="admin" name="username")
			button(type="submit") Login
